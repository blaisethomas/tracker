<div class="main-container fonts">

<% @users.each do |a| %>
   	<!-- SECTION -->
    <div class="row bg-info">
		<h4 style="text-align:center; margin:30px;"><%= a["name"] %> || github: <%= a["login"] %></h4>
	</div>

	<!-- INFO -->
    <div class="row">
    	<!-- PHOTO -->
	    <div class="col-md-4">
			<%= image_tag(a["avatar"], :class => "img-responsive img-thumbnail center-block imagesize")%>
		</div>
		<!-- COMMITS -->
		<div class="col-md-8">
			<table class="table table-condensed">
				<th class="col-md-2"> repo </th> 
				<th class="col-md-4"> commit message </th> 
				<th class="col-md-2"> date/time </th>
				<% a["activity"].each do |b| %>
					<tr>
					<td class="col-md-2"><%= b["repo"] %></td>
					<td class="col-md-4"><%= link_to (b["commit"]["message"]),(b["commit"]["url"]) %></td>
					<td class="col-md-2"><%= b["created_at"]%></td>
					</tr>
				<% end %>
	    	</table>  
	    </div>
    </div> <!-- end of row -->
<% end %> <!-- end of users loop -->
</div>
